<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.abcsh.exercise.statement.mapper.UserMapper">

    <select id="getUserByAccount" resultType="com.abcsh.exercise.statement.entity.User">
        select * from user where account = #{account}
    </select>

    <insert id="createUserByID" parameterType="com.abcsh.exercise.statement.entity.User">
        insert into statement values(#{account},#{name},#{password})
    </insert>
</mapper>